      {question:"Qual evento celebra e divulga o trabalho das paneleiras em Vit√≥ria?",image:"https://upload.wikimedia.org/wikipedia/commons/f/f4/Feira_de_artesanato_ES.jpg",options:["Feira da Moqueca","Festival Capixaba da Panela de Barro","Semana do Folclore","Feira do Barro e da Pesca"],answer:1,explanation:"O Festival Capixaba da Panela de Barro celebra a cultura das paneleiras."}
    ];

    let currentQuestion = 0;
    let score = 0;
    const quizContainer = document.getElementById("quiz");

    const soundCorrect = document.getElementById("soundCorrect");
    const soundWrong = document.getElementById("soundWrong");
    const soundWin = document.getElementById("soundWin");

    function loadQuestion() {
      if(currentQuestion < quizData.length){
        const q = quizData[currentQuestion];
        quizContainer.innerHTML = `
          <img src="${q.image}" alt="Imagem da quest√£o" class="quiz-img">
          <div class="question">${q.question}</div>
          <div class="options">
            ${q.options.map((opt,i)=>`<button onclick="checkAnswer(${i})">${opt}</button>`).join('')}
          </div>`;
      } else {
        soundWin.play();
        quizContainer.innerHTML = `
          <div class="result">üéâ Voc√™ acertou ${score} de ${quizData.length} perguntas!</div>
          <button class="restart-btn" onclick="restartQuiz()">üîÑ Recome√ßar o Quiz</button>`;
      }
    }

    function checkAnswer(selected){
      const q = quizData[currentQuestion];
      if(selected===q.answer){
        score++;
        soundCorrect.play();
      } else {
        soundWrong.play();
      }
      quizContainer.innerHTML += `<p class='explanation'>${selected===q.answer?'‚úÖ Correto!':'‚ùå Errado!'} ${q.explanation}</p>`;
      setTimeout(()=>{currentQuestion++; loadQuestion();},2500);
    }

    function restartQuiz(){currentQuestion=0; score=0; loadQuestion();}
    loadQuestion();
  </script>
